---
---

{
    "posts": [
        {% for post in site.posts %}
        {
            "title": "{{ post.title }}",
            "url": "{{ post.url }}",
            "date": "{{ post.date | date: "%b %-d, %Y" }}",
            "excerpt": {{ post.excerpt || jsonify }},
            "tags": [
                {% for tag in post.tags %}
                    "{{ tag }}"{% if forloop.last == false %},{% endif %}
                {% endfor %}
            ]
        }{% if forloop.last == false %},{% endif %}
        {% endfor %}
    ]
}
